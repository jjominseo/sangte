<script>
/* FRONT-END LOGIC: form validation, local draft save, sample stories */
(function(){
  const form = document.getElementById('applyForm');
  const saveDraft = document.getElementById('saveDraft');
  const applyTopBtn = document.getElementById('applyTopBtn');
  const scrollApply = document.getElementById('scrollApply');
  const openGuide = document.getElementById('openGuide');
  const storiesList = document.getElementById('storiesList');
  const loadSample = document.getElementById('loadSample');

  // Simple UI helpers
  function toast(msg){
    const t = document.createElement('div');
    t.textContent = msg;
    Object.assign(t.style,{
      position:'fixed',right:'18px',bottom:'18px',background:'#063b3b',color:'#fff',padding:'10px 14px',borderRadius:'10px',zIndex:9999
    });
    document.body.appendChild(t);
    setTimeout(()=>t.remove(),3000);
  }

  // Scroll to form
  applyTopBtn.addEventListener('click', ()=> document.getElementById('applySection').scrollIntoView({behavior:'smooth'}));
  scrollApply.addEventListener('click', ()=> document.getElementById('applySection').scrollIntoView({behavior:'smooth'}));

  // Guide modal (simple)
  openGuide.addEventListener('click', ()=>{
    const txt = `ê°„ë‹¨ ê°€ì´ë“œ:
1) ë³¸ì¸ì´ ê´€ì‹¬ìˆëŠ” í™˜ê²½ë¬¸ì œ(í•™êµÂ·ì§€ì—­)ë¥¼ ê³¨ë¼ìš”.
2) ì™œ ì´ ë¬¸ì œë¥¼ ê³ ì³¤ëŠ”ì§€(ì¸ë¬¸ì  ì§ˆë¬¸)ì™€ êµ¬ì²´ì  ì‹¤ì²œë°©ë²•ì„ ì ì–´ìš”.
3) ì‚¬ì§„/ì§§ì€ ì˜ìƒìœ¼ë¡œ ê¸°ë¡í•˜ë©´ ë” ì¢‹ì•„ìš”.`;
    alert(txt);
  });

  // Save draft to localStorage
  saveDraft.addEventListener('click', ()=>{
    const data = {
      name:form.name.value,
      age:form.age.value,
      school:form.school.value,
      email:form.email.value,
      idea:form.idea.value,
      pitch:form.pitch.value,
      savedAt: new Date().toISOString()
    };
    localStorage.setItem('el_youth_draft', JSON.stringify(data));
    toast('ì´ˆì•ˆì´ ë¡œì»¬ì— ì €ì¥ë˜ì—ˆìŠµë‹ˆë‹¤. (ë¸Œë¼ìš°ì €ë¥¼ ë‹«ì•„ë„ ìœ ì§€ë©ë‹ˆë‹¤)');
  });

  // Load draft if exists
  window.addEventListener('load', ()=>{
    const d = localStorage.getItem('el_youth_draft');
    if(d){
      try{
        const obj = JSON.parse(d);
        if(obj && confirm('ì €ì¥ëœ ì´ˆì•ˆì´ ìˆìŠµë‹ˆë‹¤. ë¶ˆëŸ¬ì˜¬ê¹Œìš”?')){
          form.name.value = obj.name || '';
          form.age.value = obj.age || '';
          form.school.value = obj.school || '';
          form.email.value = obj.email || '';
          form.idea.value = obj.idea || '';
          form.pitch.value = obj.pitch || '';
        }
      }catch(e){}
    }
  });

  // Form submission (fake)
  form.addEventListener('submit', (e)=>{
    e.preventDefault();
    // simple validation
    if(!form.name.value.trim()){ alert('ì´ë¦„ì„ ì…ë ¥í•´ì£¼ì„¸ìš”'); form.name.focus(); return; }
    if(!form.age.value.trim()){ alert('ë‚˜ì´ë¥¼ ì…ë ¥í•´ì£¼ì„¸ìš”'); form.age.focus(); return; }
    if(!form.school.value.trim()){ alert('í•™êµ/í•™ë…„ì„ ì…ë ¥í•´ì£¼ì„¸ìš”'); form.school.focus(); return; }
    if(!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(form.email.value)){ alert('ìœ íš¨í•œ ì´ë©”ì¼ì„ ì…ë ¥í•´ì£¼ì„¸ìš”'); form.email.focus(); return; }
    if(!form.idea.value.trim()){ alert('í”„ë¡œì íŠ¸ ì•„ì´ë””ì–´ë¥¼ í•œ ì¤„ë¡œ ì‘ì„±í•´ì£¼ì„¸ìš”'); form.idea.focus(); return; }
    if(!form.pitch.value.trim()){ alert('í”„ë¡œì íŠ¸ ì†Œê°œë¥¼ ì‘ì„±í•´ì£¼ì„¸ìš”'); form.pitch.focus(); return; }

    // simulate "submission"
    const entry = {
      id: 'p_' + Date.now(),
      name: form.name.value.trim(),
      school: form.school.value.trim(),
      idea: form.idea.value.trim(),
      pitch: form.pitch.value.trim(),
      date: new Date().toLocaleString()
    };

    // save to localStorage archive
    const arr = JSON.parse(localStorage.getItem('el_youth_archive') || '[]');
    arr.unshift(entry);
    localStorage.setItem('el_youth_archive', JSON.stringify(arr));

    // clear form
    form.reset();
    toast('ì‹ ì²­ì´ ì ‘ìˆ˜ë˜ì—ˆìŠµë‹ˆë‹¤ â€” (ìƒ˜í”Œ ì•±ì´ë¯€ë¡œ ì‹¤ì œ ì œì¶œì€ ì•„ë‹™ë‹ˆë‹¤)');
    renderStories();
    // scroll to stories
    setTimeout(()=>document.getElementById('storiesTitle').scrollIntoView({behavior:'smooth'}),400);
  });

  // Stories render
  function renderStories(){
    const arr = JSON.parse(localStorage.getItem('el_youth_archive') || '[]');
    storiesList.innerHTML = '';
    if(arr.length === 0){
      storiesList.innerHTML = '<div class="story-card"><div class="story-meta"><div class="avatar">YS</div><div><strong>ìƒ˜í”Œ ìŠ¤í† ë¦¬ ì—†ìŒ</strong><div class="muted tiny">ì•„ì§ ë“±ë¡ëœ ì°¸ê°€ì‘ì´ ì—†ìŠµë‹ˆë‹¤. ìƒ˜í”Œ ë¶ˆëŸ¬ì˜¤ê¸°ë¥¼ ëˆŒëŸ¬ ì˜ˆì‹œë¥¼ í™•ì¸í•´ë³´ì„¸ìš”.</div></div></div></div>';
      return;
    }
    arr.slice(0,10).forEach(item=>{
      const card = document.createElement('div');
      card.className = 'story-card';
      card.innerHTML = `
        <div class="story-meta">
          <div class="avatar">${escapeInitials(item.name)}</div>
          <div>
            <strong>${escapeHtml(item.name)}</strong>
            <div class="muted tiny">${escapeHtml(item.school)} Â· ${escapeHtml(item.date)}</div>
          </div>
        </div>
        <div style="margin-top:10px"><strong>ì•„ì´ë””ì–´</strong><div style="margin-top:6px">${escapeHtml(item.idea)}</div></div>
        <div style="margin-top:8px;color:var(--muted)"><strong>ì†Œê°œ</strong><div style="margin-top:6px">${escapeHtml(item.pitch)}</div></div>
      `;
      storiesList.appendChild(card);
    });
  }

  // sample data loader
  loadSample.addEventListener('click', ()=>{
    const samples = [
      {name:'ê¹€í•˜ëŠ˜', school:'OOê³ ë“±í•™êµ 2í•™ë…„', idea:'ê¸‰ì‹ ì”ë°˜ ì¤„ì´ê¸° ìº í˜ì¸', pitch:'ê¸‰ì‹ ì”ë°˜ì„ ì¤„ì´ê¸° ìœ„í•´ ë§¤ì£¼ '+"\"í”ŒëŸ¬ìŠ¤ë°ì´\""+'ë¥¼ ë„ì…í•˜ì—¬ ì†ŒëŸ‰ ë©”ë‰´ ì²´í—˜ê³¼ ë‚¨ì€ ìŒì‹ ê¸°ë¡ ìº í˜ì¸ì„ ì§„í–‰í•¨.'},
      {name:'ì´ë„ìœ¤', school:'OOì¤‘í•™êµ 3í•™ë…„', idea:'í”Œë¼ìŠ¤í‹± ë¹¨ëŒ€ ëŒ€ì‹  '+"'ì¢…ì´ë¹¨ëŒ€ ì±Œë¦°ì§€'", pitch:'ì¹´í˜ì™€ í˜‘ì—…í•˜ì—¬ í•™êµ ì£¼ë³€ 5ê°œ ìƒì ì— ì¢…ì´ë¹¨ëŒ€ ë¹„ì¹˜ ë° SNS ì±Œë¦°ì§€ ì‹¤í–‰.'},
      {name:'ë°•ì§€ë¯¼', school:'ì‹œë¦½ì²­ì†Œë…„ì„¼í„°', idea:'ë™ë„¤ ë‚˜ë¬´ ì¸í„°ë·° í”„ë¡œì íŠ¸', pitch:'ì§€ì—­ ë…¸ì¸ê³¼ í•¨ê»˜ ë§ˆì„ ë‚˜ë¬´ì˜ ì—­ì‚¬ë¥¼ ê¸°ë¡í•˜ê³  ì „ì‹œí•˜ëŠ” ì•„ì¹´ì´ë¸Œ ì œì‘.'}
    ];
    const arr = JSON.parse(localStorage.getItem('el_youth_archive') || '[]');
    // prepend samples
    const merged = samples.map((s,i)=>({id:'sample_'+i, name:s.name, school:s.school, idea:s.idea, pitch:s.pitch, date:new Date().toLocaleDateString()})).concat(arr);
    localStorage.setItem('el_youth_archive', JSON.stringify(merged));
    renderStories();
    toast('ìƒ˜í”Œ ìŠ¤í† ë¦¬ 3ê°œê°€ ì¶”ê°€ë˜ì—ˆìŠµë‹ˆë‹¤.');
  });

  // helpers
  function escapeHtml(str){
    if(!str) return '';
    return String(str).replace(/[&<>"']/g, function(m){return ({'&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;',"'":'&#39;'}[m])});
  }
  function escapeInitials(name){
    if(!name) return 'YS';
    const parts = name.trim().split(/\s+/);
    if(parts.length===1) return parts[0].slice(0,2).toUpperCase();
    return (parts[0][0]+parts[1][0]).toUpperCase();
  }

  // initial render
  renderStories();

})();
</script>
